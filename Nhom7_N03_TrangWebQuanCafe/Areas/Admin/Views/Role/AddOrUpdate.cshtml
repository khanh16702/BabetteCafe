@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Categories";
    string error = TempData["error"] as string;
}

@model Nhom7_N03_TrangWebQuanCafe.Models.Role

<h2 class="py-5">Update Roles</h2>
@if (!string.IsNullOrEmpty(error))
{
    <p class="text-danger">@error</p>
}
<div class="row">
    <div class="col-md-8">
        <form action="/admin/role/addorupdate?page=@ViewBag.page" method="post">
            <input type="hidden" name="roleid" class="form-control" value="@Model.RoleId">
            <div class="form-group row">
                <label for="productname" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="name" class="form-control" id="productname" value="@Model.Name" required>
                </div>
            </div>
            <div class="form-group row" style="display:flex">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-warning" href="/admin/role/index?page=@ViewBag.page">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>