    </section><!-- /.page-title -->

    <!-- ========================
      Reservation
    =========================== -->
    <section id="reservation" class="reservation">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-6 offset-lg-3">
            <div class="heading text-center mb-30">
              <p class="heading__desc">Book a table in just a minute!</p>
            </div><!-- /.heading -->
          </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-8 offset-lg-2">
              <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <select class="form-control" id="number-of-people">
                      <option selected value="2">2 people</option>
                      <option value="3">3 people</option>
                      <option value="4">4 people</option>
                      <option value="5">5 people</option>
                      <option value="6">6 people</option>
                      <option value="7">7 people</option>
                    </select>
                  </div>
                </div><!-- /.col-lg-4 --> 
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <div class="form-group">
                    <select class="form-control" id="book-time">
                      <option value="8">8:00 AM - 10:00 AM</option>
                      <option value="10">10:00 AM - 12:00 AM</option>
                      <option value="12">12:00 AM - 02:00 PM</option>
                      <option value="14">02:00 PM - 04:00 PM</option>
                      <option value="16">04:00 PM - 06:00 PM</option>
                      <option value="18">06:00 PM - 08:00 PM</option>
                      <option value="20">08:00 PM - 10:00 PM</option>
                    </select>
                  </div>
                </div><!-- /.col-lg-4 -->
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <button onclick="findTable()" class="btn btn__primary btn__block">Find A Table</button>
                </div><!-- /.col-lg-12 -->
              </div><!-- /.row -->
          </div><!-- /.col-lg-8 -->
        </div><!-- /.row -->
      </div><!-- /.container -->
    </section><!-- /.Reservation -->

    <!-- =========================== 
      portfolio Gallery 
    ============================= -->
    <section id="portfolioGallery" class="portfolio portfolio-gallery portfolio-gallery-no-margin py-0">
      <div class="container-fluid col-padding-0">
        <div class="row">
            @foreach(var item in Model) {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="portfolio-item">
                        <div class="portfolio__img">
                            <img src="@item.Path" alt="portfolio img">
                        </div>
                        <div class="portfolio__hover">
                            <a href="@item.Path" data-lightbox="lightbox" class="zoom__icon"></a>
                        </div>
                    </div>
                </div>
            }
        </div><!-- /.row -->
      </div><!-- /.container -->
    </section><!-- /.portfolio Gallery -->

    @section Scripts{
        <script>
            function findTable() {
                var accRole = "@ViewBag.accRole";
                if (accRole != 6) {
                    alert("You must login as a user to continue!");
                }
                else {
                    var numberOfPeople = $('#number-of-people').find(":selected").val();
                    var bookedTime = $('#book-time').find(":selected").val();
                    $.ajax({
                        url: "/reservation/FindTable?numberOfPeople=" + numberOfPeople + "&bookedTime=" + bookedTime,
                        type: "GET",
                        dataType: "json",
                        beforeSend: function () {

                        },
                        success: function (data) {
                            if (data.status == "success") {
                                alert("Your table is booked successfully!");
                            }
                            else {
                                alert("There are no tables available");
                            }
                        },
                        error: function (error) {
                            console.log("error");
                        },
                        complete: function () {

                        }
                    });
                }
            }
        </script>
    }
