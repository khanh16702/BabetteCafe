<!-- ======================
  Blog Single
========================= -->
<section id="blogSingleRightSidebar" class="blog blog-single pb-50">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-8">
                <div class="post-item">
                    <div class="post__content">
                        <div class="post__desc">
                            @Html.Raw(Model.Content)
                        </div><!-- /.post-desc -->
                    </div><!-- /.post-content -->
                </div><!-- /.post-item -->
                <div class="widget-tags mb-40">
                    <ul class="list-unstyled" id="get-current-tags">
                     
                    </ul>
                </div>
                <div class="blog-share mb-40">
                    <h5 class="post__share-title">Share:</h5>
                    <ul class="social__icons">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div><!-- /.post-share -->
                <div class="blog-widget blog-author">
                    <div class="blog__author-avatar">
                        <img src="@ViewBag.authorImage" alt="avatar">
                    </div><!-- /.author-avatar  -->
                    <div class="blog__author-content">
                        <p class="blog__author-bio">
                            @Html.Raw(ViewBag.authorIntroduction)
                        </p>
                    </div><!-- /.author-content  -->
                </div><!-- /.post-author  -->
            </div><!-- /.col-lg-8 -->
            <div class="col-sm-12 col-md-12 col-lg-4">
                <aside class="sidebar">
                    <div class="widget widget-search">
                        <h5 class="widget__title">Search</h5>
                        <div class="widget__content">
                            <form action="/news/index" method="get" class="widget__form-search">
                                <input type="text" name="name" class="form-control" placeholder="Type and hit enter ...">
                                <input type="hidden" name="tagId" value="@ViewBag.tagId" class="form-control">
                                <input type="hidden" name="categoryId" value="@ViewBag.categoryId" class="form-control">
                                <button class="btn" type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div><!-- /.widget-content -->
                    </div><!-- /.widget-search -->
                    <div class="widget widget-categories">
                        <h5 class="widget__title">categories</h5>
                        <div class="widget-content">
                            <ul class="list-unstyled mb-0" id="get-all-categories">
                            </ul>
                        </div><!-- /.widget-content -->
                    </div><!-- /.widget-categories -->
                    <div class="widget widget-posts">
                        <h5 class="widget__title">Recent Posts</h5>
                        <div class="widget__content" id="get-recent-posts">
                        </div><!-- /.widget-content -->
                    </div><!-- /.widget-posts -->
                    <div class="widget widget-tags">
                        <h5 class="widget__title">Tags</h5>
                        <div class="widget-content">
                            <ul class="list-unstyled" id="get-all-tags">
                            </ul>
                        </div><!-- /.widget-content -->
                    </div><!-- /.widget-Tags -->
                </aside><!-- /.sidebar -->
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.blog Single -->
@section Scripts {
    <script>
        $.ajax({
            url: "/news/GetAllNewsCategories",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                console.log(data);
                $('#get-all-categories').html('');
                data.forEach(function (item, index) {
                    let row = `<li><a href="/news/index?name=@ViewBag.name&tagId=@ViewBag.tagId&categoryId=${item.newsCategoryId}">${item.name} <span>(${item.numberOfPosts})</span></a></li>`;
                    $('#get-all-categories').append(row);
                });
                $('#get-all-categories').append(`<li><a href="/news/index?name=@ViewBag.name&tagId=@ViewBag.tagId">All </a></li>`);
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url: "/news/GetRecentNews",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                console.log(data);
                $('#get-recent-posts').html('');
                data.forEach(function (item, index) {
                    let row = `<div class="widget-post-item">
                                                <div class="widget__post-img">
                                                    <a href="/news/newsdetail?id=${item.newsId}"><img src="${item.image}" style="max-height:79px; width:100%" alt="product"></a>
                                                <div class="widget__post-content" style="margin-top:10px">
                                                    <span class="widget__post-date">${item.customDate}</span>
                                                    <h6 class="widget__post-title">
                                                        <a href="/news/newsdetail?id=${item.newsId}">
                                                            ${item.title}
                                                        </a>
                                                    </h6>
                                                </div>
                                            </div></li>`;
                    $('#get-recent-posts').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url: "/news/GetAllTags",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                console.log(data);
                $('#get-all-tags').html('');
                data.forEach(function (item, index) {
                    let row = `<li><a href="/news/index?name=@ViewBag.name&tagId=${item.newsTagId}&categoryId=@ViewBag.categoryId">${item.name}</a></li>`;
                    $('#get-all-tags').append(row);
                });
                $('#get-all-tags').append(`<li><a href="/news/index?name=@ViewBag.name&categoryId=@ViewBag.categoryId">All</a></li>`);
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url: "/news/GetTags?id=@Model.NewsId",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                console.log(data);
                $('#get-current-tags').html('');
                data.forEach(function (item, index) {
                    let row = `<li><a href="/news/index?tagId=${item.newsTagId}">${item.name}</a></li>`;
                    $('#get-current-tags').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });
    </script>
}