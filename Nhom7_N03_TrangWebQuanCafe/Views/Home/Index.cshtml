@section Scripts{
    <script>
        $.ajax({
            url: "/home/GetAllBanners",
            type: "GET",
            dataType: "json",
            success: function (data) {
                var count = 0;
                var attribute = "";
                let col = jQuery('<div>', { class: 'slide-item align-v-h text-center bg-overlay' });
                data.forEach(function (item, index) {
                    if (count > 0) {
                        attribute = "bg-overlay-2";
                    }
                    let row = `<div class="${attribute}">
                                    <div class="bg-img">
                                        <img src="${item.image}" alt="slide img">
                                    </div>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 col-lg-12">
                                                <div class="slide__content">
                                                    <span></span>
                                                    <h2 class="slide__title">${item.title}</h2>
                                                    <p class="slide__desc">${item.content}</p>
                                                    <a href="/reservation/index" class="btn btn__white btn__bordered my-1">Book A Table</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`;
                    col.append(row);
                    $('#get-all-banners').owlCarousel().trigger('add.owl.carousel', col);
                    col = jQuery('<div>', { class: 'slide-item align-v-h text-center bg-overlay' });
                    count++;
                });
                $('#get-all-banners').trigger('refresh.owl.carousel');
            }
        });

        $.ajax({
            url: "/home/GetIntroducingPost",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
