        });

        $.ajax({
            url: "/home/Get8Gallery",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                console.log(data);
                $('#gallery-item').html('');
                data.forEach(function (item, index) {
                    let row = `<div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="portfolio-item">
                                        <div class="portfolio__img">
                                            <img src="${item.path}" alt="portfolio img">
                                        </div>
                                        <div class="portfolio__hover">
                                            <a href="${item.path}" data-lightbox="lightbox" class="zoom__icon"></a>
                                        </div>
                                    </div>
                                </div>`;
                    $('#gallery-item').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url: "/home/Get3News",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                console.log(data);
                $('#news-item').html('');
                data.forEach(function (item, index) {
                    let row = `<div class="col-sm-12 col-md-6 col-lg-4">
                                    <div class="post-item">
                                        <div class="post__img">
                                            <a href="/news/newsdetail?id=${item.newsId}">
                                                <img style="height:250px;width:100%" src="${item.image}" alt="post image">
                                            </a>
                                        </div>
                                        <div class="post__content">
                                            <div class="post__meta">
                                                <span class="post__meta-date">${item.customDate}</span>
                                            </div>
                                            <h4 class="post__title"><a href="/news/newsdetail?id=${item.newsId}">${item.title}</a></h4>
                                            <p class="post__desc">
                                                ${item.summary}
                                            </p>
                                            <a href="/news/newsdetail?id=${item.newsId}" class="btn btn__secondary btn__link">Read More</a>
                                        </div>
                                    </div>
                                </div>`;
                    $('#news-item').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });
    </script>
}
